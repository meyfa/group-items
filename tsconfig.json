{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots" : [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src",
    "typings"
  ]
}
